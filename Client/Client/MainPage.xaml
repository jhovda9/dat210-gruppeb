<Page
    x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Controls="using:Client"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Header-->
        <StackPanel Grid.Row="0">
            <Controls:header />
        </StackPanel>
        <!--Content-->
        <StackPanel Grid.Row="1" Name="Content" SizeChanged="Content_SizeChanged" >
            <ScrollViewer Name="ContentScrollViewer" Height="{Binding ActualHeight, ElementName=Content, Mode=OneWay}"  >
                <Grid Name="Main" VerticalAlignment="Stretch" Height="auto" >
                </Grid>
            </ScrollViewer>
            <Grid Name="Edit" Visibility="Collapsed" Background="Purple">
                <TextBlock Text="Edit view" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
